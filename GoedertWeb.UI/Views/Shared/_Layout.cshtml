<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
    <title>Goedert Web</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body id="bodyMain">
    <div class="navbar navbar-inverse navbar-fixed-top" id="divMenu">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="~/Content/img/controle_rapido_img_logo.png" alt="" style="padding-left:12px; padding-top:5px;" />                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Consulta")</li>
                    <li>@Html.ActionLink("Consulta", "Index", "Consulta")</li>
                    <li>@Html.ActionLink("Cadastro", "Index", "Cadastro")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container" id="divContainerMain" style="display:none;">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="panel panel-entrar">
                        <div class="panel-body">
                            <div class="row row-centered">
                                <div class="col-lg-10 col-centered div-form-login">
                                    <div class="row">
                                        <div class="text-center img-logo-empresa">
                                            <img />
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-md-12 text-center">
                                            <span style="color: #2e9c45; padding-left:20%;">Bem vindo(a)!</span>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="button" id="btnEntrar" onclick="EntrarSite('N');" class="form-control btn btn-entrar" value="ENTRAR">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container body-content" id="divRenderBody">
        @RenderBody()
        <div id="divConsulta" style="display:none;"></div>        
        <div class="row">
            <div class="col-md-12">
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Um produto Goedert Sistemas</p>
                    <p>Desenvolvido por Samuel Reis</p>
                    <p>Todos os direitos reservados</p>
                </footer>
            </div>
        </div>
    </div>

    <script>

        function EntrarSite(exibeTelaPrincipal) {
            if (exibeTelaPrincipal == 'N')
            {
                $('#bodyMain').removeClass('fundoBody');
                $('#divMenu').show();
                $('#divContainerMain').remove();                

                $.ajax({
                url: '@Url.Action("TelaConsulta", "Consulta")',
                method: 'POST',
                dataType: 'html',
                contentType: 'application/json; charset=utf-8'
                }).done(function (data, status) {
                    $('#divConsulta').html(data).show();                    
                }).fail(function (data, status) {
                    $.notify('Erro ao carregar a tela de consulta...', { clickToHide: true, autoHide: false });
                });                
            }
            else
            {
                $('#bodyMain').addClass('fundoBody');
                $('#divContainerMain').show();
                $('#divMenu').hide();                
                $('#divConsulta').hide();
            }
        }

        function GetPessoa(idPessoa) {
            $.ajax({
                url: '@Session["WEB_API"].ToString()/api/pessoas/' + idPessoa + '/listarPessoa',
                method: 'GET',
                dataType: 'json'
            }).done(function (data, status) {
                data = TrataJson(data);

                $.ajax({
                    url: '@Url.Action("ResumoConsulta", "Consulta")',
                    method: 'POST',
                    dataType: 'html',
                    contentType: 'application/json; charset=utf-8',
                    data: JSON.stringify({
                        'model': data,
                        'viewCadastro': 'S'
                    })
                }).done(function (data, status) {
                    $('#divResumoConsulta').html(data).show();
                    $('#divCadastro').remove();
                    $('#divBtnGravarNovaPessoa').show();
                }).fail(function (data, status) {
                    $.notify('Erro ao abrir a tela para listar a pessoa desejada...', { clickToHide: true, autoHide: false });
                });
            }).fail(function (data, status) {
                $.notify('Erro ao recuperar a pessoa desejada...', { clickToHide: true, autoHide: false });
            });
        }

        function GetPessoas(nome) {
            $.ajax({
                url: '@Session["WEB_API"].ToString()/api/pessoas/' + nome + '/listarPessoas',
                method: 'GET',
                dataType: 'json'
            }).done(function (data, status) {
                data = TrataJson(data);

                $.ajax({
                    url: '@Url.Action("ResumoConsulta", "Consulta")',
                    method: 'POST',
                    dataType: 'html',
                    contentType: 'application/json; charset=utf-8',
                    data: JSON.stringify({
                        'model': data,
                        'tipoPesquisa': 'N'
                    })
                }).done(function (data, status) {
                    $('#divResumoConsulta').html(data).show();
                }).fail(function (data, status) {
                    $.notify('Erro ao abrir a tela para listar a pessoa desejada...', { clickToHide: true, autoHide: false });
                });
            }).fail(function (data, status) {
                $.notify('Erro ao recuperar a pessoa desejada...', { clickToHide: true, autoHide: false });
            });
        }

        function GetDocumentos(numero) {
            $.ajax({
                url: '@Session["WEB_API"].ToString()/api/documentos/' + numero + '/listarDocumentos',
                method: 'GET',
                dataType: 'json'
            }).done(function (data, status) {
                $.each(data, function (i, item) {
                    var dadosPessoas = GetDadosPessoa(item.id_pessoa);
                    var dadosTipoPessoa = GetTipoPessoa(dadosPessoas.id_tipo_pessoa);
                    dadosPessoas = $.extend(dadosPessoas, { descricao: dadosTipoPessoa.descricao });

                    var dadosDocumentos = GetDocumento(item.id_pessoa);

                    if (dadosDocumentos.length > 0) {
                        var dadosTipoDocumento = {};
                        $.each(dadosDocumentos, function (idx, item) {
                            dadosTipoDocumento = GetTipoDocumento(item.id_tipo_documento);
                            dadosDocumentos[idx] = $.extend(dadosDocumentos[idx], { descricao: dadosTipoDocumento.descricao });
                        });
                    }

                    dadosDocumentos = { dadosDocumentos: dadosDocumentos };
                    data[i] = $.extend(dadosDocumentos, dadosPessoas);
                });

                 $.ajax({
                    url: '@Url.Action("ResumoConsulta", "Consulta")',
                    method: 'POST',
                    dataType: 'html',
                    contentType: 'application/json; charset=utf-8',
                    data: JSON.stringify({
                        'model': data,
                        'tipoPesquisa': 'D'
                    })
                }).done(function (data, status) {
                    $('#divResumoConsulta').html(data).show();
                }).fail(function (data, status) {
                    $.notify('Erro ao abrir a tela para listar a pessoa desejada...', { clickToHide: true, autoHide: false });
                });

            }).fail(function (data, status) {
                $.notify('Erro ao recuperar os documentos...', { clickToHide: true, autoHide: false });
            });
        }

        function TrataJson(data) {
            return $.each(data, function (i, item) {
                var dadosTipoPessoa = GetTipoPessoa(item.id_tipo_pessoa);
                data[i] = $.extend(data[i], { descricao: dadosTipoPessoa.descricao });

                var dadosDocumentos = GetDocumento(item.id_pessoa);
                if (dadosDocumentos.length > 0) {
                    var dadosTipoDocumento = {};
                    $.each(dadosDocumentos, function (idx, item) {
                        dadosTipoDocumento = GetTipoDocumento(item.id_tipo_documento);
                        dadosDocumentos[idx] = $.extend(dadosDocumentos[idx], { descricao: dadosTipoDocumento.descricao });
                    });
                }

                dadosDocumentos = { dadosDocumentos: dadosDocumentos };
                data[i] = $.extend(dadosDocumentos, data[i]);
            });
        }

        function GetDocumento(idPessoa) {
            return $.ajax({
                url: '@Session["WEB_API"].ToString()/api/documentos/' + idPessoa + '/listarDocumento',
                method: 'GET',
                dataType: 'json',
                async: false
            }).done(function (data, status) {
            }).fail(function (data, status) {
                $.notify('Erro ao recuperar o documento...', { clickToHide: true, autoHide: false });
            }).responseJSON;
        }

        function GetTipoPessoa(idTipoPessoa) {
            return $.ajax({
                url: '@Session["WEB_API"].ToString()/api/pessoas/' + idTipoPessoa + '/listarTipoPessoa',
                method: 'GET',
                dataType: 'json',
                async: false
            }).done(function (data, status) {
            }).fail(function (data, status) {
                $.notify('Erro ao recuperar o tipo de pessoa...', { clickToHide: true, autoHide: false });
            }).responseJSON[0];
        }

        function GetTipoDocumento(idTipoDocumento) {
            return $.ajax({
                url: '@Session["WEB_API"].ToString()/api/documentos/' + idTipoDocumento + '/listarTipoDocumento',
                method: 'GET',
                dataType: 'json',
                async: false
            }).done(function (data, status) {
            }).fail(function (data, status) {
                $.notify('Erro ao recuperar o tipo de documento...', { clickToHide: true, autoHide: false });
            }).responseJSON[0];
        }

        function GetDadosPessoa(idPessoa) {
            return $.ajax({
                url: '@Session["WEB_API"].ToString()/api/pessoas/' + idPessoa + '/listarPessoa',
                method: 'GET',
                dataType: 'json',
                async: false
            }).done(function (data, status) {
            }).fail(function (data, status) {
                $.notify('Erro ao recuperar a pessoa...', { clickToHide: true, autoHide: false });
            }).responseJSON[0];
        }

    </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>